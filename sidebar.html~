    <script src="https://miro.com/app/static/sdk.1.1.js"></script>
    <script>
      miro.onReady(() => {
        const btn = document.querySelector('button')
        btn.addEventListener('click', async () => {
          try {
            const sticker = (
              await miro.board.widgets.create({
                type: 'sticker',
                text: 'Congratulations! ðŸŽ‰, you have built your first Miro plugin',
              })
            )[0]

              await miro.board.viewport.zoomToObject(sticker)
	      miro.addListener("DATA_BROADCASTED", (event) => {
		  console.log(event)
	      })
          } catch (error) {
            alert('Something went wrong, check the developer console')
          }
        })
      })
    </script>
